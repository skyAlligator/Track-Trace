<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/ui_hometab_fragContainerV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="58dp"
        android:layout_marginTop="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/hometab_include"
        layout="@layout/common_action_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/bottom_tab"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/ui_tab_transferV"
            style="@style/tab_style_container">

            <ImageView
                android:id="@+id/ui_tab_transfer_iconV"
                style="@style/tab_style_icon"
                android:src="@drawable/tab_transfer_selector" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ui_tab_historyV"
            style="@style/tab_style_container">

            <ImageView
                android:id="@+id/ui_tab_history_iconV"
                style="@style/tab_style_icon"
                android:src="@drawable/tab_history_selector" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ui_tab_sterilizeV"
            style="@style/tab_style_container">

            <ImageView
                android:id="@+id/ui_tab_sterilize_iconV"
                style="@style/tab_style_icon"
                android:src="@drawable/tab_sterilize_selector" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ui_tab_alertsV"
            style="@style/tab_style_container">

            <ImageView
                android:id="@+id/ui_tab_alerts_iconV"
                style="@style/tab_style_icon"
                android:src="@drawable/tab_alerts_selector" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>