<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="217dp"
        android:layout_height="200dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/transfer_screen_icon"
        tools:layout_editor_absoluteX="78dp" />

    <FrameLayout
        android:id="@+id/linearLayout"
        style="@style/cmnRowStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ui_senderOwnerImgV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_launcher"
            app:civ_border_color="@color/lightWhite"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/ui_senderOwnerNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="50dp"
            android:text="Peter Bennett"
            android:textColor="#0b0b0b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ui_senderOwnerNoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="20dp"
            android:text="1-(130)276-2259"
            android:textSize="12sp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/transfer" />


    <Button
        android:id="@+id/ui_scanNtransferBtn"
        style="@style/cmnBtnStyle"
        android:layout_marginTop="8dp"
        android:text="SCAN &amp; TRANSFER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.32" />

    <FrameLayout
        android:id="@+id/linearLayout2"
        style="@style/cmnRowStyle"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ui_receiverOwnerImgV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_launcher"
            app:civ_border_color="@color/lightWhite"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/ui_receiverOwnerNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="50dp"
            android:text="Peter Bennett"
            android:textColor="#0b0b0b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ui_receiverOwnerNoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="50dp"
            android:text="1-(130)276-2259"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ui_receiverContactV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="15dp"
            app:srcCompat="@drawable/contact" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        style="@style/cmnRowStyle"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <TextView
            android:id="@+id/ui_receiverCateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:inputType="textCapSentences"
            android:text="Manufacturer" />

    </FrameLayout>
</android.support.constraint.ConstraintLayout>