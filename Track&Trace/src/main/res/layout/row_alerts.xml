<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ui_row_alert_imgV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher"
        app:civ_border_color="@color/lightWhite"
        app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/ui_row_alert_detailTv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="90dp"
        android:layout_marginTop="33dp"
        android:text="the kit transfer to antony" />

    <TextView
        android:id="@+id/ui_row_alert_timestampV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:text="22 minutes ago" />

    <TextView
        android:id="@+id/ui_row_alert_headingTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="5dp"
        android:text="Tampered"
        android:textColor="@color/light_red"
        android:textStyle="bold" />
</FrameLayout>