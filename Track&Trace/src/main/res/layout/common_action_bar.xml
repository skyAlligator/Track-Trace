<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/common_toolbar">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ui_actionBar_backV"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginStart="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/left_arrow" />

        <TextView
            android:id="@+id/ui_actionBar_titleV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Ownership Transfer"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical">

        <ImageView
            android:id="@+id/ui_actionBar_qrFlashImgV"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/circle"
            android:padding="8dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/flash_off" />

        <ProgressBar
            android:id="@+id/ui_actionBar_progressBarV"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginEnd="9dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ui_actionBar_refreshV"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginEnd="9dp"
            android:visibility="gone"
            app:srcCompat="@drawable/reload_ic" />

        <ImageView
            android:id="@+id/ui_actionBar_logoutV"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginEnd="9dp"
            app:srcCompat="@drawable/logout" />

    </LinearLayout>

</FrameLayout>